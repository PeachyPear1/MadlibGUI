        <Border x:Name="DecorativeBorder2" BorderBrush="Black" BorderThickness="5" HorizontalAlignment="Left" Height="259" Margin="394,1,0,0" VerticalAlignment="Top" Width="398"/>
        <TextBlock x:Name="MadlibCompleted" HorizontalAlignment="Left" Margin="24,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="179" Width="344"/>
        <Button x:Name="WriteMadlib" Content="Write!" Margin="163,99,554,284" Click="WriteMadlib_Click"/>
    </Grid>
</Window>
