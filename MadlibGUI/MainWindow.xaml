        <TextBlock x:Name="DecorText_Copy" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="=============================================" VerticalAlignment="Top" Width="372"/>
        <TextBlock x:Name="EnterTextPlaceholder" HorizontalAlignment="Left" Margin="543,13,0,0" TextWrapping="Wrap" Text="Enter the following:" VerticalAlignment="Top"/>
        <TextBox x:Name="Noun1" HorizontalAlignment="Left" Height="23" Margin="420,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontStyle="Italic"/>
        <TextBlock x:Name="NounTextPlaceholder" HorizontalAlignment="Left" Margin="463,32,0,0" TextWrapping="Wrap" Text="Nouns" VerticalAlignment="Top" TextDecorations="Underline"/>
        <Button x:Name="Noun1Button" Content="Confirm" HorizontalAlignment="Left" Margin="443,76,0,0" VerticalAlignment="Top" Width="75" Click="Noun1Button_Click"/>
        <TextBox x:Name="Noun2" HorizontalAlignment="Left" Height="23" Margin="420,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontStyle="Italic"/>
        <Button x:Name="Noun2Button" Content="Confirm" HorizontalAlignment="Left" Margin="443,124,0,0" VerticalAlignment="Top" Width="75" Click="Noun2Button_Click"/>
        <TextBox x:Name="Noun3" HorizontalAlignment="Left" Height="23" Margin="420,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontStyle="Italic"/>
        <Button x:Name="Noun3Button" Content="Confirm" HorizontalAlignment="Left" Margin="443,172,0,0" VerticalAlignment="Top" Width="75" Click="Noun3Button_Click"/>
        <TextBlock x:Name="AdjectivesPlaceholder" HorizontalAlignment="Left" Margin="580,32,0,0" TextWrapping="Wrap" Text="Adjectives" VerticalAlignment="Top" TextDecorations="Underline"/>
        <TextBox x:Name="Adjective1" HorizontalAlignment="Left" Height="23" Margin="560,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" FontStyle="Italic"/>
        <Button x:Name="Adjective1Button" Content="Confirm" HorizontalAlignment="Left" Margin="572,76,0,0" VerticalAlignment="Top" Width="75" Click="Adjective1Button_Click"/>
        <TextBox x:Name="Adjective2" HorizontalAlignment="Left" Height="23" Margin="560,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" FontStyle="Italic"/>
        <Button x:Name="Adjective2Button" Content="Confirm" HorizontalAlignment="Left" Margin="572,124,0,0" VerticalAlignment="Top" Width="75" Click="Adjective2Button_Click"/>
        <TextBox x:Name="Adjective3" HorizontalAlignment="Left" Height="23" Margin="560,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" FontStyle="Italic"/>
        <Button x:Name="Adjective3Button" Content="Confirm" HorizontalAlignment="Left" Margin="572,172,0,0" VerticalAlignment="Top" Width="75" Click="Adjective3Button_Click"/>
        <TextBox x:Name="Adjective4" HorizontalAlignment="Left" Height="23" Margin="560,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" FontStyle="Italic"/>
        <Button x:Name="Adjective4Button" Content="Confirm" HorizontalAlignment="Left" Margin="572,220,0,0" VerticalAlignment="Top" Width="75" Click="Adjective4Button_Click"/>
        <TextBlock x:Name="OccupationsPlaceholder" HorizontalAlignment="Left" Margin="699,32,0,0" TextWrapping="Wrap" Text="Occupations" VerticalAlignment="Top" TextDecorations="Underline"/>
        <TextBox x:Name="Occupation1" HorizontalAlignment="Left" Height="23" Margin="672,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110" FontStyle="Italic"/>
        <Button x:Name="Occupation1Button" Content="Confirm" HorizontalAlignment="Left" Margin="690,76,0,0" VerticalAlignment="Top" Width="75" Click="Occupation1Button_Click"/>
        <TextBox x:Name="Occupation2" HorizontalAlignment="Left" Height="23" Margin="672,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110" FontStyle="Italic"/>
        <Button x:Name="Occupation2Button" Content="Confirm" HorizontalAlignment="Left" Margin="690,124,0,0" VerticalAlignment="Top" Width="75" Click="Occupation2Button_Click"/>
        <TextBox x:Name="Occupation3" HorizontalAlignment="Left" Height="23" Margin="672,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110" FontStyle="Italic"/>
        <Button x:Name="Occupation3Button" Content="Confirm" HorizontalAlignment="Left" Margin="690,172,0,0" VerticalAlignment="Top" Width="75" Click="Occupation3Button_Click"/>
