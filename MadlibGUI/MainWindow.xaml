<Window x:Name="MadlibGUIMainWindow" x:Class="MadlibGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MadlibGUI"
        mc:Ignorable="d"
        Title="Madlib GUI by Hannah Hamilton" Height="450" Width="800">
    <Grid x:Name="MainGrid" Background="#FF9C9898">
        <Rectangle x:Name="DecorativeRectangle" HorizontalAlignment="Left" Height="100" Stroke="Black" VerticalAlignment="Top" Width="394" Fill="#FFB9B9D6"/>
        <Border x:Name="DecorativeBorder" BorderBrush="Black" BorderThickness="5" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="394"/>
        <TextBlock x:Name="GameTitle" HorizontalAlignment="Left" Margin="10,23,0,0" TextWrapping="Wrap" Text="Madlib" VerticalAlignment="Top" Height="77" Width="372" TextAlignment="Center" FontSize="36" FontFamily="Rockwell"/>
